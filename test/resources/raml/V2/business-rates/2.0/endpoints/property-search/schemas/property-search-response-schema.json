{
  "$id": "http://api.service.hmrc.gov.uk/example.json",
  "type": "object",
  "additionalProperties": false,
  "definitions": {},
  "$schema": "http://json-schema.org/draft-07/schema#",
  "properties": {
    "_links": {
      "type": "object",
      "additionalProperties": false,
      "description": "HATEOAS links",
      "properties": {
        "self": {
          "type": "object",
          "additionalProperties": false,
          "description": "Links to this endpoint",
          "properties": {
            "href": {
              "type": "string",
              "format": "uri",
              "pattern": "^https?://\\w+",
              "description": "URL for this link"
            },
            "template": {
              "type": "boolean",
              "description": "Is the HREF a RFC-6570 compliant URI Template"
            }
          },
          "required": [
            "href",
            "template"
          ]
        },
        "first": {
          "type": "object",
          "additionalProperties": false,
          "description": "Links to the first page of results for this resource",
          "properties": {
            "href": {
              "type": "string",
              "format": "uri",
              "pattern": "^https?://\\w+",
              "description": "URL for this link"
            },
            "template": {
              "type": "boolean",
              "description": "Is the HREF a RFC-6570 compliant URI Template"
            }
          },
          "required": [
            "href",
            "template"
          ]
        },
        "next": {
          "type": "object",
          "additionalProperties": false,
          "description": "Links to the next page of results for this resource",
          "properties": {
            "href": {
              "type": "string",
              "format": "uri",
              "pattern": "^https?://\\w+",
              "description": "URL for this link"
            },
            "template": {
              "type": "boolean",
              "description": "Is the HREF a RFC-6570 compliant URI Template"
            }
          },
          "required": [
            "href",
            "template"
          ]
        }
      },
      "required": [
        "self",
        "first"
      ]
    },
    "pageSize": {
      "type": "integer",
      "description": "The page size",
      "minimum": 10,
      "maximum": 100
    },
    "total": {
      "type": "integer",
      "description": "The total number of properties matching your query criteria"
    },
    "properties": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "description": "An array of properties matching the search criteria",
        "properties": {
          "_links": {
            "type": "object",
            "additionalProperties": false,
            "description": "HATEOAS links",
            "properties": {
              "valuations": {
                "type": "object",
                "additionalProperties": false,
                "description": "Link to the valuations for this property",
                "properties": {
                  "href": {
                    "type": "string",
                    "format": "uri",
                    "pattern": "^https?://\\w+",
                    "description": "URL for this link"
                  },
                  "template": {
                    "type": "boolean",
                    "description": "Is the HREF a RFC-6570 compliant URI Template"
                  }
                },
                "required": [
                  "href",
                  "template"
                ]
              },
              "currentValuation": {
                "type": "object",
                "additionalProperties": false,
                "description": "Link to the current valuation for this property",
                "properties": {
                  "href": {
                    "type": "string",
                    "format": "uri",
                    "pattern": "^https?://\\w+",
                    "description": "URL for this link"
                  },
                  "template": {
                    "type": "boolean",
                    "description": "Is the HREF a RFC-6570 compliant URI Template"
                  }
                },
                "required": [
                  "href",
                  "template"
                ]
              }
            }
          },
          "uarn": {
            "type": "integer",
            "description": "Unique Address Reference Number (UARN)"
          },
          "billingAuthorityReference": {
            "type": "string",
            "description": "The reference number for the local billing authority"
          },
          "address": {
            "type": "string",
            "description": "The full, combined address of the property"
          },
          "description": {
            "type": "string",
            "description": "The description of the property type (e.g. office)"
          },
          "specialCategoryCode": {
            "type": "string",
            "description": "Special category code"
          }
        },
        "required": [
          "_links",
          "uarn",
          "billingAuthorityReference",
          "address"
        ]
      }
    }
  },
  "required": [
    "_links",
    "pageSize",
    "total",
    "properties"
  ]
}