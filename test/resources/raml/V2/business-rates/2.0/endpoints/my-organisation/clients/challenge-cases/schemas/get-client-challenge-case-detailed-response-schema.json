{
  "title": "HateoasChallengeCaseWithClientDetailed",
  "type": "object",
  "description": "Detailed view of a created challenge case",
  "properties": {
    "_links": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "self": {
          "type": "object",
          "required": [
            "template",
            "href"
          ],
          "properties": {
            "href": {
              "type": "string",
              "format": "uri",
              "pattern": "^https?://\\w+",
              "description": "URL for this link"
            },
            "template": {
              "type": "boolean",
              "description": "Is the HREF a RFC-6570 compliant URI Template"
            }
          }
        },
        "summary": {
          "type": "object",
          "description": "Link to a summary projection of this challenge case",
          "required": [
            "template",
            "href"
          ],
          "properties": {
            "href": {
              "type": "string",
              "format": "uri",
              "pattern": "^https?://\\w+",
              "description": "URL for this link"
            },
            "template": {
              "type": "boolean",
              "description": "Is the HREF a RFC-6570 compliant URI Template"
            }
          }
        }
      }
    },
    "challengeCaseReference": {
      "description": "the reference number for this challenge case",
      "type": "string",
      "minLength": 1
    },
    "checkCaseReference": {
      "description": "Case Reference for the associated Check Case",
      "type": "string",
      "minLength": 1
    },
    "challengeCaseSubmissionId": {
      "description": "the submission ID for this challenge case",
      "type": "string",
      "minLength": 1
    },
    "createdDateTime": {
      "type": "string",
      "format": "date-time",
      "description": "the date/time this challenge case was created"
    },
    "uarn": {
      "description": "the unique address reference of the property",
      "type": "integer",
      "minimum": 1,
      "maximum": 9223372036854775807
    },
    "valuationId": {
      "type": "integer",
      "description": "Unique valuation reference number",
      "maximum": 9223372036854775807
    },
    "address": {
      "description": "the address of the property",
      "type": "string"
    },
    "reasonCode": {
      "description": "Reason for challenge case. Uses a lookup code.",
      "lookup": "challengeCodeOfGroundsDfe",
      "type": "string",
      "minLength": 1
    },
    "challengeRentalData": {
      "$ref": "#/definitions/challengerentaldata"
    },
    "proposedRateableValue": {
      "description": "Proposed rateable value",
      "type": "integer",
      "minimum": 0,
      "maximum": 999999999
    },
    "proposedEffectiveDate": {
      "description": "Proposed effective date of the proposed RV",
      "type": "string",
      "format": "date"
    },
    "groupPreChallengeReviewId": {
      "description": " A group pre-challenge review (GPCR) is an option offered by the Valuation Office Agency (VOA) to groups of property occupiers, owners or ratepayers of business and other non-domestic properties. It allows them to challenge the basis of the valuation in respect of local, regional or national schemes of valuation.  ",
      "type": "integer",
      "minimum": 1,
      "maximum": 99999999
    },
    "clientOrganisationName": {
      "description": "Name of client's organisation",
      "type": "string"
    },
    "submittedBy": {
      "type": "string",
      "description": "The organisation that submitted challenge case"
    },
    "attachments": {
      "type": "array",
      "minItems": 2,
      "maxItems": 10,
      "items": {
        "type": "object",
        "properties": {
          "filename": {
            "type": "string"
          },
          "fileType": {
            "type": "string",
            "enum": [
              "EVIDENCE",
              "STATEMENT"
            ]
          }
        },
        "required": [
          "filename",
          "fileType"
        ],
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false,
  "required": [
    "_links",
    "challengeCaseSubmissionId",
    "createdDateTime",
    "challengeCaseReference",
    "checkCaseReference",
    "valuationId",
    "uarn",
    "address",
    "reasonCode",
    "proposedEffectiveDate",
    "clientOrganisationName",
    "submittedBy",
    "attachments"
  ],
  "definitions": {
    "challengerentaldata": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "amountOfRentPayable": {
          "description": "How much is the annual rent",
          "type": "number",
          "minimum": 1,
          "maximum": 999999999.99
        },
        "timePeriodOfRentPayable": {
          "description": "The rental period",
          "type": "string",
          "enum": [
            "ANNUALLY",
            "MONTHLY",
            "WEEKLY"
          ]
        },
        "startDateOfRentPayable": {
          "description": "This cannot be a future date. If you are in a rent-free period, enter the date the agreement started",
          "type": "string",
          "format": "date"
        },
        "rentFreeMonths": {
          "description": "If the lease includes a rent-free period, how long is it (in months)",
          "type": "integer",
          "minimum": 1,
          "maximum": 999
        }
      },
      "required": [
        "amountOfRentPayable",
        "timePeriodOfRentPayable",
        "startDateOfRentPayable"
      ]
    }
  }
}