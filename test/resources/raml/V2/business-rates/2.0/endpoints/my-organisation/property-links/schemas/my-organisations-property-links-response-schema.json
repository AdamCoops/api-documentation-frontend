{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "My Organisations Property Links",
  "type": "object",
  "additionalProperties": false,
  "definitions": {},
  "required": [
    "propertyLinks",
    "total",
    "pageSize",
    "page",
    "_links"
  ],
  "properties": {
    "_links": {
      "type": "object",
      "additionalProperties": false,
      "description": "HATEOAS links",
      "required": [
        "first",
        "self"
      ],
      "properties": {
        "self": {
          "type": "object",
          "additionalProperties": false,
          "description": "Links to this resource",
          "required": [
            "href",
            "template"
          ],
          "properties": {
            "href": {
              "type": "string",
              "format": "uri",
              "pattern": "^https?://\\w+",
              "description": "URL for this link"
            },
            "template": {
              "type": "boolean",
              "description": "Is the HREF a RFC-6570 compliant URI Template"
            }
          }
        },
        "first": {
          "type": "object",
          "additionalProperties": false,
          "description": "Links to the first page of results for this resource",
          "required": [
            "href",
            "template"
          ],
          "properties": {
            "href": {
              "type": "string",
              "format": "uri",
              "pattern": "^https?://\\w+",
              "description": "URL for this link"
            },
            "template": {
              "type": "boolean",
              "description": "Is the HREF a RFC-6570 compliant URI Template"
            }
          }
        },
        "previous": {
          "type": "object",
          "additionalProperties": false,
          "description": "Links to the previous page of results for this resource",
          "required": [
            "href",
            "template"
          ],
          "properties": {
            "href": {
              "type": "string",
              "format": "uri",
              "pattern": "^https?://\\w+",
              "description": "URL for this link"
            },
            "template": {
              "type": "boolean",
              "description": "Is the HREF a RFC-6570 compliant URI Template"
            }
          }
        },
        "next": {
          "type": "object",
          "additionalProperties": false,
          "description": "Links to the next page of results for this resource",
          "required": [
            "href",
            "template"
          ],
          "properties": {
            "href": {
              "type": "string",
              "format": "uri",
              "pattern": "^https?://\\w+",
              "description": "URL for this link"
            },
            "template": {
              "type": "boolean",
              "description": "Is the HREF a RFC-6570 compliant URI Template"
            }
          }
        },
        "last": {
          "type": "object",
          "additionalProperties": false,
          "description": "Links to the last page of results for this resource",
          "required": [
            "href",
            "template"
          ],
          "properties": {
            "href": {
              "type": "string",
              "format": "uri",
              "pattern": "^https?://\\w+",
              "description": "URL for this link"
            },
            "template": {
              "type": "boolean",
              "description": "Is the HREF a RFC-6570 compliant URI Template"
            }
          }
        }
      }
    },
    "page": {
      "type": "integer",
      "description": "The page number"
    },
    "pageSize": {
      "type": "integer",
      "description": "The page size",
      "minimum": 10,
      "maximum": 100
    },
    "total": {
      "type": "integer",
      "description": "The total number of elements"
    },
    "propertyLinks": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "agents",
          "localAuthorityRef",
          "address",
          "uarn",
          "createdDateTime",
          "startDate",
          "status",
          "submissionId",
          "id",
          "_links"
        ],
        "properties": {
          "address": {
            "type": "string",
            "description": "The address of the linked property"
          },
          "agents": {
            "type": "array",
            "description": "The list of agents assigned to represent this property",
            "items": {
              "type": "object",
              "additionalProperties": false,
              "required": [
                "organisationName",
                "organisationId"
              ],
              "properties": {
                "organisationId": {
                  "type": "number",
                  "description": "The agent's organisation ID"
                },
                "organisationName": {
                  "type": "string",
                  "description": "The agent's organisation name"
                }
              }
            }
          },
          "_links": {
            "type": "object",
            "additionalProperties": false,
            "description": "HATEOAS links",
            "properties": {
              "self": {
                "type": "object",
                "additionalProperties": false,
                "description": "Link to this resource",
                "properties": {
                  "href": {
                    "type": "string",
                    "format": "uri",
                    "pattern": "^https?://\\w+",
                    "description": "URL for this link"
                  },
                  "template": {
                    "type": "boolean",
                    "description": "Is the HREF a RFC-6570 compliant URI Template"
                  }
                },
                "required": [
                  "href",
                  "template"
                ]
              }
            }
          },
          "id": {
            "type": "integer",
            "description": "Unique ID for this property link"
          },
          "localAuthorityRef": {
            "type": "string",
            "description": "The local authority reference number for the linked property"
          },
          "status": {
            "type": "string",
            "description": "Status of this property link",
            "enum": [
              "APPROVED",
              "PENDING",
              "DECLINED",
              "REVOKED",
              "MORE_EVIDENCE_REQUIRED"
            ]
          },
          "createdDateTime": {
            "type": "string",
            "format": "date-time",
            "description": "The date and time (ISO Date Time String) of when the property link was created"
          },
          "startDate": {
            "type": "string",
            "format": "date",
            "description": "The date from which the property link is active"
          },
          "endDate": {
            "type": "string",
            "format": "date",
            "description": "The date until which the property link is active"
          },
          "submissionId": {
            "type": "string",
            "description": "Unique submission ID for this property link"
          },
          "uarn": {
            "type": "integer",
            "description": "The UARN (Unique Address Reference Number) of the linked property"
          }
        }
      }
    }
  }
}