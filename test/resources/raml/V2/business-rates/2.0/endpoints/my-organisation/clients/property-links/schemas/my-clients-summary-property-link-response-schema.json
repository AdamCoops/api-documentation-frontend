{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "My Clients Property Link",
  "type": "object",
  "additionalProperties": false,
  "definitions": {},
  "properties": {
    "_links": {
      "type": "object",
      "additionalProperties": false,
      "description": "HATEOAS links",
      "properties": {
        "self": {
          "type": "object",
          "additionalProperties": false,
          "description": "Link to this resource",
          "properties": {
            "href": {
              "type": "string",
              "format": "uri",
              "pattern": "^https?://\\w+",
              "description": "URL for this link"
            },
            "template": {
              "type": "boolean",
              "description": "Is the HREF a RFC-6570 compliant URI Template"
            }
          },
          "required": [
            "href",
            "template"
          ]
        }
      }
    },
    "propertyLink": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "id": {
          "type": "integer",
          "description": "Unique ID for this property link"
        },
        "submissionId": {
          "type": "string",
          "description": "Unique submission ID for this property link"
        },
        "status": {
          "type": "string",
          "description": "Status of this property link",
          "enum": [
            "APPROVED",
            "PENDING",
            "DECLINED",
            "REVOKED",
            "MORE_EVIDENCE_REQUIRED"
          ]
        },
        "startDate": {
          "type": "string",
          "format": "date",
          "description": "The date from which the property link is active"
        },
        "endDate": {
          "type": "string",
          "format": "date",
          "description": "The date until which the property link is active"
        },
        "uarn": {
          "type": "integer",
          "description": "The UARN (Unique Address Reference Number) of the linked property"
        },
        "address": {
          "type": "string",
          "description": "The address of the linked property"
        },
        "localAuthorityRef": {
          "type": "string",
          "description": "The local authority reference number for the linked property"
        },
        "client": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "organisationId": {
              "type": "integer",
              "description": "Unique ID for the client organisation"
            },
            "organisationName": {
              "type": "string",
              "description": "The name of the client organisation"
            }
          },
          "required": [
            "organisationId",
            "organisationName"
          ]
        }
      },
      "required": [
        "id",
        "submissionId",
        "status",
        "startDate",
        "uarn",
        "address",
        "localAuthorityRef",
        "client"
      ]
    }
  },
  "required": [
    "_links",
    "propertyLink"
  ]
}