{
  "title": "HateoasChallengeCaseWithAgent",
  "description": "Challenge case summary",
  "type": "object",
  "properties": {
    "_links": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "self": {
          "type": "object",
          "required": [
            "template",
            "href"
          ],
          "properties": {
            "href": {
              "type": "string",
              "format": "uri",
              "pattern": "^https?://\\w+",
              "description": "URL for this link"
            },
            "template": {
              "type": "boolean",
              "description": "Is the HREF a RFC-6570 compliant URI Template"
            }
          }
        },
        "detailed": {
          "type": "object",
          "description": "Link to a detailed projection of this challenge case",
          "required": [
            "template",
            "href"
          ],
          "properties": {
            "href": {
              "type": "string",
              "format": "uri",
              "pattern": "^https?://\\w+",
              "description": "URL for this link"
            },
            "template": {
              "type": "boolean",
              "description": "Is the HREF a RFC-6570 compliant URI Template"
            }
          }
        }
      }
    },
    "address": {
      "type": "string",
      "description": "the address of the property"
    },
    "agent": {
      "type": "object",
      "description": "Details of the current agent assigned to the property.",
      "required": [
        "organisationName",
        "code",
        "organisationId"
      ],
      "properties": {
        "code": {
          "type": "number",
          "format": "number",
          "description": "The unique code of the agent"
        },
        "organisationId": {
          "type": "number",
          "format": "number",
          "description": "Unique ID for the agent organisation"
        },
        "organisationName": {
          "type": "string",
          "description": "The name of the agent organisation"
        }
      },
      "additionalProperties": false
    },
    "challengeCaseReference": {
      "type": "string",
      "description": "the reference number for this challenge case"
    },
    "challengeCaseStatus": {
      "type": "string",
      "enum": [
        "PENDING",
        "RECEIVED",
        "ASSIGNED",
        "UNDER_REVIEW",
        "MORE_INFO_NEEDED",
        "INITIAL_RESPONSE",
        "DECISION_SENT",
        "CANCELLED",
        "OPEN",
        "CLOSED"
      ]
    },
    "challengeCaseSubmissionId": {
      "type": "string",
      "description": "the submission ID for this challenge case"
    },
    "createdDateTime": {
      "type": "string",
      "format": "date-time",
      "description": "the date/time this challenge case was created"
    },
    "settledDate": {
      "type": "string",
      "description": "The date this challenge case was settled"
    },
    "submittedBy": {
      "type": "string",
      "description": "the organisation that submitted challenge case"
    },
    "uarn": {
      "type": "number",
      "format": "number",
      "description": "the unique address reference of the property"
    },
    "valuationId": {
      "type": "number",
      "format": "number",
      "description": "the unique valuation reference number"
    }
  },
  "additionalProperties": false,
  "required": [
    "_links",
    "submittedBy",
    "createdDateTime",
    "uarn",
    "address",
    "valuationId",
    "challengeCaseStatus",
    "challengeCaseReference",
    "challengeCaseSubmissionId"
  ]
}