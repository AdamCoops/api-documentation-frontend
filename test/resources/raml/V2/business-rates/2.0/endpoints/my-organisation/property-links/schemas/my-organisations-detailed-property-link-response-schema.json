{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "My Organisations Property Link (detailed)",
  "type": "object",
  "additionalProperties": false,
  "definitions": {},
  "required": [
    "propertyLink",
    "_links"
  ],
  "properties": {
    "_links": {
      "type": "object",
      "additionalProperties": false,
      "description": "HATEOAS links",
      "properties": {
        "self": {
          "type": "object",
          "additionalProperties": false,
          "description": "Links to this resource",
          "required": [
            "href",
            "template"
          ],
          "properties": {
            "href": {
              "type": "string",
              "format": "uri",
              "pattern": "^https?://\\w+",
              "description": "URL for this link"
            },
            "template": {
              "type": "boolean",
              "description": "Is the HREF a RFC-6570 compliant URI Template"
            }
          }
        }
      }
    },
    "propertyLink": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "agents",
        "localAuthorityRef",
        "address",
        "uarn",
        "startDate",
        "evidence",
        "capacity",
        "method",
        "status",
        "submissionId",
        "id"
      ],
      "properties": {
        "address": {
          "type": "string",
          "description": "The address of the linked property"
        },
        "agents": {
          "type": "array",
          "description": "The list of agents assigned to represent this property",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": [
              "organisationName",
              "organisationId"
            ],
            "properties": {
              "organisationId": {
                "type": "number",
                "description": "The agent's organisation ID"
              },
              "organisationName": {
                "type": "string",
                "description": "The agent's organisation name"
              }
            }
          }
        },
        "id": {
          "type": "integer",
          "description": "Unique ID for this property link"
        },
        "localAuthorityRef": {
          "type": "string",
          "description": "The local authority reference number for the linked property"
        },
        "evidence": {
          "type": "array",
          "items": {
            "description": "Evidence attached to support the property link request",
            "type": "object",
            "additionalProperties": false,
            "required": [
              "evidenceType",
              "fileName"
            ],
            "properties": {
              "evidenceType": {
                "type": "string",
                "description": "The type of evidence",
                "enum": [
                  "lease",
                  "otherUtilityBill",
                  "ratesBill",
                  "serviceCharge",
                  "waterRateDemand",
                  "stampDutyLandTaxForm",
                  "license",
                  "landRegistryTitle",
                  "otherSupportingDocument"
                ]
              },
              "fileName": {
                "description": "The file name of the evidence",
                "type": "string",
                "minLength": 1,
                "maxLength": 255
              }
            }
          }
        },
        "capacity": {
          "type": "string",
          "description": "The capacity of the organisation that created the property link",
          "enum": [
            "OWNER",
            "OCCUPIER",
            "OWNER_OCCUPIER"
          ]
        },
        "method": {
          "type": "string",
          "description": "The type of evidence provided when creating the property link",
          "enum": [
            "RATES_BILL",
            "NO_EVIDENCE",
            "OTHER"
          ]
        },
        "status": {
          "type": "string",
          "description": "Status of this property link",
          "enum": [
            "APPROVED",
            "PENDING",
            "DECLINED",
            "REVOKED",
            "MORE_EVIDENCE_REQUIRED"
          ]
        },
        "startDate": {
          "type": "string",
          "format": "date",
          "description": "The date from which the property link is active"
        },
        "endDate": {
          "type": "string",
          "format": "date",
          "description": "The date until which the property link is active"
        },
        "submissionId": {
          "type": "string",
          "description": "Unique submission ID for this property link"
        },
        "uarn": {
          "type": "integer",
          "description": "The UARN (Unique Address Reference Number) of the linked property"
        }
      }
    }
  }
}
